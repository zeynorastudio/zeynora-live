# ============================================================================
# Supabase Configuration
# ============================================================================
# Get these from your Supabase project settings: https://app.supabase.com

NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ============================================================================
# Phase 4.1 - Order Tracking via OTP
# ============================================================================

# Feature flag for order tracking
# Set to "false" to disable order tracking feature
# Default: enabled (true)
ORDER_TRACKING_ENABLED=true

# OTP Provider Configuration
# Options: "mock" (for development/testing), "twilio", "msg91", etc.
# When set to "mock", OTPs will be logged to console instead of being sent
# Default: "mock"
OTP_PROVIDER=mock

# OTP Provider API Key
# Required when using a real OTP provider (Twilio, Msg91, etc.)
# Leave empty when using mock provider
# Example for Twilio: your_twilio_account_sid
# Example for Msg91: your_msg91_auth_key
OTP_API_KEY=

# OTP Provider Additional Configuration (provider-specific)
# These may be needed depending on your OTP provider
# Examples:
# OTP_PROVIDER_SID=your_twilio_account_sid
# OTP_PROVIDER_AUTH_TOKEN=your_twilio_auth_token
# OTP_PROVIDER_FROM=your_sender_number_or_id

# ============================================================================
# Payment Gateway - Razorpay
# ============================================================================

NEXT_PUBLIC_RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# ============================================================================
# Shipping - Shiprocket
# ============================================================================

SHIPROCKET_BASE_URL=https://apiv2.shiprocket.in/v1
SHIPROCKET_EMAIL=your_shiprocket_email
SHIPROCKET_PASSWORD=your_shiprocket_password
SHIPROCKET_API_KEY=your_shiprocket_api_key
SHIPROCKET_API_SECRET=your_shiprocket_api_secret
SHIPROCKET_WEBHOOK_SECRET=your_shiprocket_webhook_secret

# ============================================================================
# Application Configuration
# ============================================================================

# Node Environment
# Options: "development", "production", "test"
NODE_ENV=development

# Next.js Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ============================================================================
# Optional: Email Service (if using SendGrid or similar)
# ============================================================================

# SENDGRID_API_KEY=your_sendgrid_api_key
# SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# ============================================================================
# Notes:
# ============================================================================
# 1. Copy this file to .env.local for local development
# 2. Never commit .env.local or .env files to version control
# 3. For production, set these variables in your hosting platform (Vercel, etc.)
# 4. Phase 4.1 Order Tracking works with mock provider by default
#    - OTPs will be logged to console in development
#    - Set OTP_PROVIDER and OTP_API_KEY when ready to use real SMS provider










