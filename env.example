# ============================================================================
# Supabase Configuration
# ============================================================================
# Get these from your Supabase project settings: https://app.supabase.com

NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ============================================================================
# Phase 4.1 - Order Tracking via OTP
# ============================================================================

# Feature flag for order tracking
# Set to "false" to disable order tracking feature
# Default: enabled (true)
ORDER_TRACKING_ENABLED=true

# OTP Provider Configuration
# Options: "mock" (for development/testing), "twilio", "msg91", etc.
# When set to "mock", OTPs will be logged to console instead of being sent
# Default: "mock"
OTP_PROVIDER=mock

# OTP Provider API Key
# Required when using a real OTP provider (Twilio, Msg91, etc.)
# Leave empty when using mock provider
OTP_API_KEY=

# ============================================================================
# Payment Gateway - Razorpay
# ============================================================================

NEXT_PUBLIC_RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret

# ============================================================================
# Shipping - Shiprocket
# ============================================================================

# Enable/disable automatic shipment creation
# Set to "true" in production when ready to auto-book shipments
SHIPROCKET_ENABLED=false

# Shiprocket API credentials
SHIPROCKET_BASE_URL=https://apiv2.shiprocket.in/v1
SHIPROCKET_AUTH_URL=https://apiv2.shiprocket.in/v1/external/auth/login
SHIPROCKET_RATE_URL=https://apiv2.shiprocket.in/v1/external/courier/serviceability/
SHIPROCKET_ORDER_CREATE_URL=https://apiv2.shiprocket.in/v1/external/orders/create/adhoc
SHIPROCKET_EMAIL=your_shiprocket_email
SHIPROCKET_PASSWORD=your_shiprocket_password
SHIPROCKET_WEBHOOK_SECRET=your_shiprocket_webhook_secret

# Pickup location name (must match name in Shiprocket dashboard)
SHIPROCKET_PICKUP_LOCATION=Primary

# Pickup pincode (warehouse location for rate calculation)
SHIPROCKET_PICKUP_PINCODE=110001

# ============================================================================
# Default Shipment Dimensions (used for all orders)
# ============================================================================

# Default package weight in kilograms
# Used for shipping rate calculation and Shiprocket booking
DEFAULT_SHIPMENT_WEIGHT=1.5

# Default package dimensions in centimeters
DEFAULT_SHIPMENT_LENGTH=40
DEFAULT_SHIPMENT_BREADTH=30
DEFAULT_SHIPMENT_HEIGHT=10

# ============================================================================
# Application Configuration
# ============================================================================

# Node Environment
# Options: "development", "production", "test"
NODE_ENV=development

# Site URL (used for email links and API callbacks)
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# System API Token (for internal API calls)
SYSTEM_API_TOKEN=your_secure_system_token

# ============================================================================
# Optional: Email Service (if using SendGrid or similar)
# ============================================================================

# SENDGRID_API_KEY=your_sendgrid_api_key
# SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# ============================================================================
# Notes:
# ============================================================================
# 1. Copy this file to .env.local for local development
# 2. Never commit .env.local or .env files to version control
# 3. For production, set these variables in your hosting platform (Vercel, etc.)
# 4. SHIPROCKET_ENABLED must be "true" for automatic shipment booking
# 5. Stock is decremented immediately after payment is confirmed
# 6. Internal shipping cost is calculated and stored but NOT charged to customers
